{
	"extends": "@vue/tsconfig/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"outDir": "js",
		"rootDir": "src",
		"types": [
			"node",
			"@nextcloud/typings"
		],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"jsx": "preserve",
		"jsxImportSource": "vue"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue"
	]
}
